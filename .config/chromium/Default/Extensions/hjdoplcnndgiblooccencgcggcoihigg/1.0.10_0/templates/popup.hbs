<div class="modal-header">
    <h3>
        <a href="http://tosdr.org/#{{id}}" target="_blank">
            <img src="images/tosdr-logo-32.png" alt="" class="pull-left"/>
        </a>
        <button id="closeButton" data-dismiss="modal" class="close pull-right" type="button">Ã—</button>
    </h3>
</div>

<div class="modal-body">

    <div class="tosdr-rating">
        <label class="label {{class}}">
            {{#if class}}
                Class {{class}}
            {{else}}
                No Class Yet
            {{/if}}
        </label>

        <p>{{{ratingText}}}</p>
    </div>

    <section class="specificissues">
        <ul class="tosdr-points">
            {{#each dataPoints}}
                <li class="point">
                    <div class="{{tosdr.point}}">
                        <h5>
                            <span class="badge {{badge}}" title="{{tosdr.point}}"><i
                                    class="icon-{{icon}} icon-white">{{sign}}</i></span>
                            {{title}}
                            <a href="{{discussion}}" target="_blank" class="label context">Discussion</a>
                        </h5>

                        <p>{{{tosdr.tldr}}}</p>

                    </div>
                </li>
            {{/each}}

        </ul>
    </section>

    {{#if linkList}}
        <section>
            <h4>Read the Terms</h4>
            <ul class="tosback2">
                {{#each linkList}}
                    <li><a target="_blank" href="{{url}}">{{name}}</a></li>
                {{/each}}
            </ul>
        </section>
    {{/if}}

    <a target="_blank" href="https://tosdr.org/get-involved.html">Get Involved!</a>
</div>